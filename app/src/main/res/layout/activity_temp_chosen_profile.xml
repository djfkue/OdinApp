<com.argonmobile.odinapp.view.ScaleTransformView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gesture_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:weightSum="1.0">
            <TextView
                android:id="@+id/profile_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="30dp"
                android:text="Profile 1"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:background="@android:color/holo_blue_light"/>
            <TextView
                android:id="@+id/profile_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="30dp"
                android:text="Profile 2"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:background="@android:color/holo_blue_light"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:weightSum="1.5">
            <TextView
                android:id="@+id/profile_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="30dp"
                android:text="Profile 3"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:background="@android:color/holo_blue_light"/>
            <TextView
                android:id="@+id/profile_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="30dp"
                android:text="Profile 4"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:background="@android:color/holo_blue_light"/>
            <TextView
                android:id="@+id/profile_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="30dp"
                android:text="Profile 5"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:background="@android:color/holo_blue_light"/>
        </LinearLayout>
    </LinearLayout>

</com.argonmobile.odinapp.view.ScaleTransformView>
