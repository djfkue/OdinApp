<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.argonmobile.odinapp.EditProfileFragment">

    <RelativeLayout
        android:id="@+id/title_view_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/s_bg">
        <TextView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="@string/edit_profile_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="#000"
            />
    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/title_view_container"
        android:background="@android:color/white"/>
    <HorizontalScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true"
        android:fillViewport="true"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:descendantFocusability="beforeDescendants">
            <com.argonmobile.odinapp.view.FreeProfileLayoutView
                android:id="@+id/edit_container"
                android:layout_width="800dp"
                android:layout_height="match_parent">
            </com.argonmobile.odinapp.view.FreeProfileLayoutView>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
