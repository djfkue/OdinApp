<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.argonmobile.odinapp.SearchCameraFragment"
    android:background="@drawable/camera_search_bg">
    <View
        android:id="@+id/search_tap_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"/>
    <com.argonmobile.odinapp.view.WheelWidget
        android:id="@+id/wheel"
        android:layout_width="match_parent"
        android:divider="@null"
        android:scrollbars="none"
        android:layout_height="630dp"
        android:layout_alignParentBottom="true"
        android:overScrollMode="never"/>

    <TextView android:id="@+id/current_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@android:color/white"
        android:clickable="true"
        android:text="CurrentSelection"
        android:layout_alignParentLeft="true"/>
    <TextView android:id="@+id/fake_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:textColor="@android:color/white"/>
    <include layout="@layout/search_camera_view" />
</RelativeLayout>
